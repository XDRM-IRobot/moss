<launch>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
    <!--
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    -->
    <param name="base_global_planner" value="global_planner/GlobalPlanner"/>
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <rosparam file="$(find moss)/move_base/move_base_params.yaml" command="load"/>
    <rosparam file="$(find moss)/costmap/costmap_common_params_sim.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find moss)/costmap/costmap_common_params_sim.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find moss)/costmap/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find moss)/costmap/global_costmap_params.yaml" command="load" />
    <!--rosparam file="$(find moss)/planner/global_planner_params.yaml" command="load" /-->
    <rosparam file="$(find moss)/planner/local_planner_params.yaml" command="load" />
    <!-- LOAD COSTMAP_CONVERTER PARAMETERS HERE -->
    <rosparam file="$(find moss)/costmap/costmap_converter_params.yaml" command="load" />
    <!--
    <rosparam file="$(find moss)/planner/dwa_local_planner_params.yaml" command="load" />
    -->  
  </node>

</launch>
